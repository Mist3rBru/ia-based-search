{
  "compilerOptions": {
    /* Build */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": ["es2022"],

    /* Strictness */
    "strict": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@/tests/*": ["__tests__/*"],
      "@/*": ["src/*"]
    }
  }
}
